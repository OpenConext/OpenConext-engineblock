                                <?php foreach ($spAttributesList[$spId] as $attributeId => $attributeValues) { ?>
                                    <tr>
                                        <td style="font-weight: bold;">
                                            <?=$metadata->getName($attributeId, $lang)?>
                                        </td>
                                        <td>
                                            <?php /** Single attribute value */ if (count($attributeValues)==1) { ?>
