/**
 * Injected variables;
 * @var $this EngineBlock_Corto_CoreProxy
 * @var $metaDataSP array
 * @var $idpList array
 * @var $action string
 * @var $ID string
 * @var $preselectedIdp string
 */

$lang = $this->language();
$uri = $_SERVER['REQUEST_URI'];

$displayName = '';
if (isset($metaDataSP['Name'][$lang])) {
    $displayName = $metaDataSP['Name'][$lang];
}
else if (isset($metaDataSP['DisplayName'][$lang])) {
    $displayName = $metaDataSP['DisplayName'][$lang];
}

$preselectedIdpData = array();
if ($preselectedIdp) {
    foreach ($idpList as $idp) {
        if ($idp['EntityId'] === $preselectedIdp) {
            $preselectedIdpData = $idp;
            break;
        }
    }
}

/**
 * @var Zend_Layout $layout
 */
$layout = $this->layout();

// Set different layout
$layout->setLayout('discover');

// Set Layout variables
$layout->header = $displayName;
$layout->subheader = $this->t('idp_selection_subheader');
$layout->title = $this->t('idp_selection_title', $displayName);
$layout->footerText = $this->t('footer');

// Set javascript
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/jquery.mousewheel.min.js');
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/jquery.putCursorAtEnd.1.0.js');
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/jquery.jscrollpane.min.js');
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/jquery.tmpl.min.js');
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/keyboardNavigator.js');
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/typewatch.js');
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/jquery.cookie.js');
$layout->getView()->inlineScript()->appendFile(EngineBlock_View::staticUrl(). '/javascript/discover.js');
$preselectedIdpJson = isset($preselectedIdp) ? 'discoveryScreen.setSelectedEntityId('.json_encode($preselectedIdp).')' : '';
$layout->getView()->inlineScript()->appendScript("
    var discoveryScreen = new Discover();
    discoveryScreen.setLanguage('". $lang ."');
    discoveryScreen.setSearchText('". $this->t('search') ."');
    discoveryScreen.setIdpList(". json_encode($idpList) .");
    discoveryScreen.setUri('". json_encode($uri). "');
    ". $preselectedIdpJson ."
    discoveryScreen.show();");
?>
