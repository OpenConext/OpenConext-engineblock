<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         backupGlobals="false"
         bootstrap="bootstrap.php"
         colors="true"
         cacheDirectory="../var/cache/.phpunit.cache"
         xsi:noNamespaceSchemaLocation="../vendor/phpunit/phpunit/phpunit.xsd"
         failOnDeprecation="true"
         failOnNotice="true"
         failOnWarning="true"
         executionOrder="random"
         displayDetailsOnAllIssues="true"
         beStrictAboutCoverageMetadata="true"
         beStrictAboutOutputDuringTests="true"
         displayDetailsOnPhpunitDeprecations="true"
         failOnPhpunitDeprecation="true"
         failOnRisky="true"
>
    <testsuites>
        <testsuite name="unit">
            <directory suffix="Test.php">unit</directory>
        </testsuite>
        <testsuite name="integration">
            <directory suffix="Test.php">integration</directory>
        </testsuite>
        <testsuite name="eb4">
            <directory suffix="Test.php">library</directory>
        </testsuite>
        <testsuite name="functional">
            <directory suffix="Test.php">functional</directory>
        </testsuite>
    </testsuites>

    <!-- Configure coverage reports -->
    <coverage includeUncoveredFiles="true">
        <report>
            <html outputDirectory="var/log/coverage/html"/>
        </report>
    </coverage>
    <source restrictDeprecations="true" restrictNotices="true" restrictWarnings="true">
        <include>
            <directory>src</directory>
            <directory>library</directory>
        </include>
    </source>
    <php>
        <server name="KERNEL_CLASS" value="App\Kernel"/>
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="max[total]=0"/>
        <ini name="memory_limit" value="512M"/>
    </php>
</phpunit>
