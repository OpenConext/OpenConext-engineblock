<input type="checkbox" tabindex="-1" role="button" aria-pressed="false" class="{{ class }} visually-hidden" id="{{ id }}" name="{{ id }}" />
<label tabindex="0" for="{{ id }}" class="{{ class }}">
    {% if hideText %}
        <span class="visually-hidden">{{ text }}</span>
    {% else %}
        <span>{{ text }}</span>
    {% endif %}
</label>
