{% if tooltipValue %}
    <input type="checkbox" class="tooltip" id="tooltip{{loop.index}}" />
    <label tabindex="0" role="button" aria-pressed="false" for="tooltip{{loop.index}}" class="tooltip"><span  class="visually-hidden">{{ 'consent_tooltip_screenreader'|trans }}</span></label>
    <div class="tooltip__value" role="alert">{{ tooltipValue }}</div>
{% endif %}
