{
  "name": "engineblockthemes",
  "license": "Apache-2.0",
  "repository": "https://github.com/OpenConext/OpenConext-engineblock.git",
  "version": "1.0.0",
  "description": "Themes for OpenConext Engineblock",
  "main": "index.js",
  "scripts": {
    "test": "BABEL_ENV=test jest",
    "audit": "npm audit",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "jshint material/javascripts/",
    "lint:css": "stylelint 'material/stylesheets/**/*.sass' --syntax sass",
    "build": "npm run build:clean && npm run build:js && npm run build:css && npm run build:copy",
    "build:clean": "rimraf ../web/images/* ../web/javascripts/* ../web/stylesheets/*",
    "build:js": "mkdir -p ../web/javascripts && browserify material/javascripts/application.js --debug -t [ babelify ] | uglifyjs > ../web/javascripts/application.min.js",
    "build:css": "mkdir -p ../web/stylesheets && node-sass material/stylesheets/ --error-bell --output-style compressed -o ../web/stylesheets/",
    "build:copy": "mkdir -p ../web/images && copyfiles --verbose --up 2 material/images/* ../web/images/",
    "watch:js": "watchify -t -t [ babelify ] material/javascripts/application.js -o ../web/javascripts/application.min.js -v",
    "watch:css": "node-sass material/stylesheets/ -w -o ../web/stylesheets/"
  },
  "author": "",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "copyfiles": "^2.1.0",
    "jest": "^24.7.1",
    "jshint": "^2.10.2",
    "node-sass": "^4.11.0",
    "puppeteer-core": "^1.14.0",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "uglify-js": "^3.5.4",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "font-awesome-sass": "^4.7.0",
    "js-cookie": "^2.1.3",
    "tippy.js": "^2.5.2"
  }
}
