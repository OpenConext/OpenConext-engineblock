{
  "name": "engineblockthemes",
  "license": "Apache-2.0",
  "repository": "https://github.com/OpenConext/OpenConext-engineblock.git",
  "version": "1.0.0",
  "description": "Themes for OpenConext Engineblock",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "test": "@cy:run",
    "test:visual-regression": "CYPRESS_integrationFolder=cypress/visual-regression npm run cy:run",
    "cy:run": "cypress run --browser firefox --headless",
    "cy:open": "cypress open",
    "cypress:open": "npx cypress open",
    "audit": "npm audit",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "jshint base/javascripts/",
    "lint:css": "stylelint ${EB_THEME:=openconext}/stylesheets/**/*.*ss",
    "clean": "rimraf ../web/images/* ../web/javascripts/* ../web/stylesheets/*",
    "build": "node scripts/build.js",
    "buildtheme": "npm run build:clean && npm run build:js && npm run build:css && npm run build:copy",
    "build:clean": "rimraf ../web/javascripts/* ../web/stylesheets/*",
    "build:js": "mkdir -p ../web/javascripts && npm run build:js:babelify",
    "build:js:babelify": "browserify ${EB_THEME:=openconext}/javascripts/application.js --plugin [ tinyify ] -t [ babelify ] -o ../web/javascripts/application.min.js",
    "build:css": "mkdir -p ../web/stylesheets && npm run build:css:sass && npm run build:css:postcss",
    "build:css:sass": "node-sass ${EB_THEME:=openconext}/stylesheets --error-bell -o ../web/stylesheets/",
    "build:css:postcss": "BROWSERSLIST_CONFIG=.browserslistrc postcss ../web/stylesheets/*.css --verbose --use autoprefixer --use cssnano --no-map --dir ../web/stylesheets",
    "build:copy": "mkdir -p ../web/images && copyfiles --verbose --up 2 base/images/* ../web/images/",
    "create-theme": "node scripts/create-theme.js",
    "watch:js": "watchify ${EB_THEME:=base}/javascripts/application.js --poll=100 --debug -t [ babelify ] ${EB_THEME:=base}/javascripts/application.js -o ../web/javascripts/application.min.js -v",
    "watch:css": "node-sass -r ${EB_THEME:=openconext}/stylesheets -w -o ../web/stylesheets",
    "release": "npm run build"
  },
  "author": "",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "autoprefixer": "^9.8.6",
    "axe-core": "^4.0.2",
    "babelify": "^10.0.0",
    "browserify": "^16.5.2",
    "copyfiles": "^2.3.0",
    "core-js": "^3.6.5",
    "cssnano": "^4.1.10",
    "cypress": "^5.1.0",
    "cypress-axe": "^0.8.1",
    "cypress-html-validate": "^1.2.2",
    "cypress-plugin-snapshots": "^1.4.4",
    "html-validate": "^3.3.0",
    "jshint": "^2.12.0",
    "node-sass": "^4.14.1",
    "postcss-cli": "^7.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.0",
    "stylelint-config-recommended": "^3.0.0",
    "tinyify": "^2.5.2",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "@csstools/normalize.css": "^11.0.1",
    "font-awesome-sass": "^4.7.0",
    "js-cookie": "^2.2.1",
    "js-yaml": "^3.14.0",
    "tippy.js": "^6.2.6"
  },
  "resolutions": {
    "jpeg-js": "0.4.0",
    "minimist": "1.2.5",
    "yargs-parser": "18.1.2"
  }
}
