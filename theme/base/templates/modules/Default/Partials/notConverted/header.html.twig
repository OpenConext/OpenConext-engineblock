<header class="mod-header">
    <div class="l-container wide">
        <p class="title">
            {% block pageHeading %}
                {% if pageHeadingTitle is defined %}
                    {{ pageHeadingTitle }}
                {% else %}
                    {{ defaultHeader }}
                {% endif %}
            {% endblock %}
        </p>

        <div class="meta">
            {% if displayLanguageSwitcher is not defined or displayLanguageSwitcher == true %}
                {{ languageSwitcher.form(locale(), postData()) }}
            {% endif %}

            <ul class="comp-links">
                {% if backLink is defined and backLink == true %}
                    <li>
                        <a href="javascript:window.history.back(-2)">{{ 'return_to_sp'|trans|capitalize }}</a>
                    </li>
                {% endif %}

                {% if helpLink is defined %}
                    <li>
                        <a href="{{ helpLink }}" target="_blank" rel="noreferrer noopener">{{ 'help_header'|trans }}<span class="help">?</span></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</header>
