{% if tooltipValue %}
    {% set id %}
        tooltip{{ loop.index }}
    {% endset %}
    {% include '@theme/Default/Partials/label.html.twig' with
        {
            button: true,
            class: 'tooltip',
            hideText: true,
            id: id|trim,
        }
    %}
    <div class="tooltip__value" role="alert">{{ tooltipValue }}</div>
{% endif %}
