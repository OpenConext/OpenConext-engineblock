<button
    class="idp__deleteDisable"
    data-connected="{{ idp['connected'] }}"
    {% if idp['connected'] is defined and not idp['connected'] %}tabindex="-1"{% endif %}
    type="button"
>
    {% if idp['connected'] is defined and not idp['connected'] %}
        <span class="idp__disabled">
            <span class="visually-hidden">
                {{ 'wayf_no_access_account_screenreader'|trans }}
            </span>
        </span>
    {% endif %}
    {% if delete %}
        {% if idp['displayTitle'] is defined %}
            {% set idpTitle = idp['displayTitle'] %}
        {% elseif idp['title'] is defined %}
            {% set idpTitle = idp['title'] %}
        {% else %}
            {% set idpTitle = '' %}
        {% endif %}
        <span class="idp__delete">
            <span class="visually-hidden">
                {{ 'wayf_delete_account_screenreader'|trans({'%idpTitle%': idpTitle}) }}
            </span>
        </span>
    {% endif %}
</button>
