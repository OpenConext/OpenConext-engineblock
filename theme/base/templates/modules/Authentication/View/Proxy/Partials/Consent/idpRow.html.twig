<img class="logo-small" src="{{ logoUrl }}"
     alt="" />
<p>{{ text|raw }}</p>
{% if attributeSource == 'engineblock' %}
    {# note: the div is here only for IE11, as soon as IE11 support is scrapped, this can be removed along with the CSS/JS for it  #}
    <div class="ie11__link">
        <a class="idpRow__supportUrl" href="{{ 'name_id_support_url'|trans }}" target="_blank" rel="noreferrer">{{ 'consent_name_id_support_link'|trans }}</a>
    </div>
{% else %}
    {% set id %}
        incorrect_{{ attributeSource }}
    {% endset %}
    <input type="checkbox" tabindex="-1" role="button" aria-hidden="true" class="modal visually-hidden" id="{{ id|trim }}" name="{{ id|trim }}" />
    {# note: the div is here only for IE11, as soon as IE11 support is scrapped, this can be removed along with the CSS/JS for it  #}
    <div class="ie11__label">
        <span class="visually-hidden">{{ 'button'|trans }}</span>
        {% include '@theme/Default/Partials/label.html.twig' with {
            button: true,
            class: 'modal',
            id: id|trim,
            hideText: false,
            text: 'consent_attributes_correction_text'|trans
        }
        %}
    </div>
    {% include '@theme/Authentication/View/Proxy/Partials/Consent/Modals/correction.html.twig' %}
{% endif %}
