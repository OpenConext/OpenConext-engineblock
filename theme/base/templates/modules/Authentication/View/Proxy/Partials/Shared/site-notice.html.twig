{% if className is defined %}
    {% set fullClassName = 'notification__warning notification__global-site-notice' ~ ' ' ~ className %}
{% else %}
    {% set fullClassName = 'notification__warning notification__global-site-notice' %}
{% endif %}
{% if showGlobalSiteNotice %}
    {% include '@theme/Default/Partials/warning.html.twig' with {
        allowedHtml: 'warning_allowed_html',
        className: fullClassName,
        text: globalSiteNotice
    } %}
{% endif %}
