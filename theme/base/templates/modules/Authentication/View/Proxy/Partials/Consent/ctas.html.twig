<div class="ctas">
    <form id="accept" method="post"
          action="{{ action }}">
        <input type="hidden" name="ID"
               value="{{ responseId }}">
        <input type="hidden" name="consent" value="yes"/>
        {% include '@theme/Default/Partials/button.html.twig' with
            {
                text: 'consent_ok'|trans
            }
        %}
    </form>
    <input type="checkbox" tabindex="-1" role="button" aria-pressed="false" class="modal visually-hidden" id="cta_consent_nok" name="cta_consent_nok" />
    {% include '@theme/Default/Partials/label.html.twig' with
        {
            class: 'modal',
            id: 'cta_consent_nok',
            hideText: false,
            text: 'consent_buttons_nok'|trans
        }
    %}
    {% include '@theme/Authentication/View/Proxy/Partials/Consent/Modals/reject.html.twig' %}
</div>
