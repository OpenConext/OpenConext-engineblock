{% macro form(currentLanguage, postData) %}
    {% if postData is not empty %}
    <form method="post" action="">
        {% for name, value in postData %}
            <input type="hidden" name="{{ name|escape('html_attr') }}" value="{{ value|escape('html_attr') }}">
        {% endfor %}
        <ul class="comp-language">
            <li>
                <button type="submit" name="lang" value="en" {% if currentLanguage == 'en' %} class="selected" {% endif %}>EN</button>
            </li>
            <li>
                <button type="submit" name="lang" value="nl" {% if currentLanguage == 'nl' %} class="selected" {% endif %}>NL</button>
            </li>
            <li>
                <button type="submit" name="lang" value="pt" {% if currentLanguage == 'pt' %} class="selected" {% endif %}>PT</button>
            </li>
        </ul>
    </form>
    {% else %}
        <ul class="comp-language">
            <li>
                <a{% if currentLanguage == 'en' %} class="selected"{% endif %} href="{{ queryStringFor('en')|escape('html_attr') }}">EN</a>
            </li>
            <li>
                <a{% if currentLanguage == 'nl' %} class="selected"{% endif %} href="{{ queryStringFor('nl')|escape('html_attr') }}">NL</a>
            </li>
            <li>
                <a{% if currentLanguage == 'pt' %} class="selected"{% endif %} href="{{ queryStringFor('pt')|escape('html_attr') }}">PT</a>
            </li>
        </ul>
    {% endif %}
{% endmacro form %}
