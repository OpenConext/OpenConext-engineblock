{% extends '@theme/Default/View/Error/error.html.twig' %}

{% set wide = true %}
{% set pageTitle = 'error_authorization_policy_violation'|trans %}
{% block pageTitle %}{{ pageTitle }}{% endblock %}
{% block title %}{{ parent() }} - {{ pageTitle }} {% endblock %}
{% block pageHeading %}{{ pageTitle }}{% endblock %}

{% block errorMessage %}

    {{ 'error_authorization_policy_violation_info'|trans|raw }}

    {% if logo is not null %}
        <img src="{{ logo.url }}"
             class="pull-right"
             width="{{ logo.width }}"
             height="{{ logo.height }}"
        >
    {% endif %}

    {% if policyDecisionMessage is not null %}
        <h2>{{ policyDecisionMessage }}</h2>
        {{ 'error_authorization_policy_violation_desc'|trans|raw }}
    {% endif %}
{% endblock %}