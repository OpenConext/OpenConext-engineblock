{% extends '@themeLayouts/scripts/default.html.twig' %}

{% block stylesheets %}{% spaceless %}
    <link href="/stylesheets/error-page.css?v={{ assetsVersion }}" rel="stylesheet" type="text/css"/>
{% endspaceless %}{% endblock %}

{% set feedbackInfo = feedbackInfo() %}
{% set hideHeader = true %}
{% set hideFooter = true %}

{% block languageSwitcher %}
    {{ languageSwitcher.form(locale(), postData()) }}
{% endblock %}

{% block content %}

    {{ flushLog('Showing feedback page with message: ' ~ pageTitle) }}

    <div class="error-container">

        <div class="error-container__content">
            <div class="error-title">
                <h1 class="error-title__heading">{% block pageTitle %}{% endblock %}</h1>
                <span class="error-title__error-message">{% block errorMessage %}{% endblock %}</span>
            </div>

            {% if feedbackInfo is not empty %}

            <div class="horizontal-rule">
                <hr class="horizontal-rule__line">
            </div>

            <div class="error-details">
                <span class="error-details__intro-text">
                    {{ 'error_feedback_info_intro'|trans }}
                </span>
                <div class="error-details__feedback-list">
                    {% block feedbackInfo %}

                            {% for name, value in feedbackInfo %}
                            <div class="feedback-info">
                                <span class="feedback-info__label">{{ name|trans }}:</span>
                                <span class="feedback-info__value">{{ value }}</span>
                            </div>
                            {% endfor %}

                    {% endblock %}
                </div>
            </div>

            {% endif %}

            <p>{{ 'error_help_desc'|trans|raw }}</p>

            {% if exception is defined %}
                <div class="l-overflow">
                    <strong>{{ exception.message }}</strong>
                    <pre>
                    {{ var_dump(exception) }}

                    {% if exception.xdebug_message is defined %}
                        {{ exception.xdebug_message|raw }}
                    {% endif %}
                    </pre>
                </div>
            {% endif %}


        </div>
        <footer class="error-container__footer footer">
            <div class="footer__button-row">
                <ul class="footer-buttons">
                    <li class="footer-buttons__link">
                        <a href="{{ 'error_wiki-href'|trans }}" class="footer-button" title="{{ 'error_wiki-link-text'|trans }}">
                            <i class="footer-button__icon fa-wikipedia-w"></i>
                            <p class="footer-button__text">{{ 'error_wiki-link-text'|trans }}</p>
                        </a>
                    </li>
                    <li class="footer-buttons__link">
                        <a href="{{ 'error_help-desk-link-href'|trans }}" class="footer-button" title="{{ 'error_help-desk-link-text'|trans }}">
                            <i class="footer-button__icon fa-graduation-cap"></i>
                            <p class="footer-button__text">{{ 'error_help-desk-link-text'|trans }}</p>
                        </a>
                    </li>
                    <li class="footer-buttons__link">
                        <a href="mailto:{{ 'error_help-desk-email'|trans }}" class="footer-button">
                            <i class="footer-button__icon fa-paper-plane"></i>
                            <p class="footer-button__text">{{ 'error_help-desk-email-text'|trans }}</p>
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    </div>

{% endblock %}