{
    "name": "openconext/engineblock",
    "description": "OpenConext SAML proxy",
    "version": "7.0.0-dev",
    "type": "project",
    "keywords": [
        "saml",
        "proxy",
        "openconext"
    ],
    "homepage": "http://www.openconext.org",
    "license": "Apache-2.0",
    "support": {
        "email": "info@openconext.org",
        "issues": "https://github.com/OpenConext/OpenConext-engineblock/issues",
        "source": "https://github.com/OpenConext/OpenConext-engineblock"
    },
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "beberlei/assert": "^3.3.3",
        "composer/package-versions-deprecated": "^1.11",
        "doctrine/dbal": "^4.3.3",
        "doctrine/doctrine-bundle": "^2.13.3",
        "doctrine/doctrine-migrations-bundle": "^3.6.0",
        "doctrine/orm": "^3.5.7",
        "guzzlehttp/guzzle": "^7.10",
        "incenteev/composer-parameter-handler": "^2.2",
        "monolog/monolog": "^2.10",
        "openconext/monitor-bundle": "^4.2",
        "openconext/saml-value-object": "^3.0",
        "pimple/pimple": "^3.6",
        "ramsey/uuid": "^4.9.1",
        "robrichards/xmlseclibs": "^3.1.3",
        "sensio/framework-extra-bundle": "^6.2.10",
        "simplesamlphp/saml2": "^4.19",
        "symfony/asset": "^5.4.45",
        "symfony/console": "^5.4.47",
        "symfony/dotenv": "^5.4.48",
        "symfony/expression-language": "^5.4.45",
        "symfony/flex": "^2.9.0",
        "symfony/form": "^5.4.45",
        "symfony/framework-bundle": "^5.4.45",
        "symfony/mailer": "5.4.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/security-bundle": "^5.4.45",
        "symfony/templating": "5.4.*",
        "symfony/translation": "^5.4.45",
        "symfony/twig-bundle": "^5.4.45",
        "symfony/validator": "^5.4.48",
        "symfony/yaml": "^5.4.45",
        "twig/twig": "^3.22.0"
    },
    "require-dev": {
        "ext-zlib": "*",
        "behat/behat": "^3.26",
        "behat/mink": "^1.12",
        "behat/mink-browserkit-driver": "^2.2",
        "dmore/behat-chrome-extension": "^1.4",
        "dmore/chrome-mink-driver": "2.9.3",
        "friends-of-behat/mink-extension": "^2.7.5",
        "friends-of-behat/symfony-extension": "^2.4.2",
        "ingenerator/behat-tableassert": "^1.3.2",
        "league/flysystem": "^3.30.2",
        "liip/functional-test-bundle": "^4.14",
        "malukenho/docheader": "^1.1",
        "mockery/mockery": "^1.6.12",
        "phake/phake": "^4.6.1",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "phpmd/phpmd": "^2.15",
        "phpunit/phpunit": "^10.5.58",
        "rector/rector": "^2.2.7",
        "squizlabs/php_codesniffer": "^3.13.5",
        "symfony/debug-bundle": "5.4.*",
        "symfony/http-client": "5.4.*",
        "symfony/phpunit-bridge": "^7.3.4",
        "symfony/var-dumper": "5.4.*",
        "symfony/web-profiler-bundle": "5.4.*"
    },
    "replace": {
        "symfony/polyfill-mbstring": "1.99",
        "symfony/polyfill-php54": "1.99",
        "symfony/polyfill-php55": "1.99",
        "symfony/polyfill-php56": "1.99"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "pre-archive-cmd": [
            "bash -c 'if [ -z \"${ASSET_TAG}\" ]; then export ASSET_TAG=$(head -c16 /dev/urandom | od --format=x1 --address-radix=none | tr -d \" \"); echo \"ASSET_TAG not set, using random value: ${ASSET_TAG}\"; fi; sed -i -e \"s,#ASSET_VERSION#,${ASSET_TAG},g\" ./config/packages/framework.yaml'"
        ]
    },
    "autoload": {
        "psr-0": {
            "EngineBlock_": "library/",
            "EngineBlock_Test": "tests/library/",
            "Pdp_": "library/",
            "AttributeAggregation_": "library/",
            "SurfConext_": "library/",
            "Surfnet_": "library/"
        },
        "psr-4": {
            "OpenConext\\": "src/OpenConext"
        },
        "classmap": [
            "src/Kernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OpenConext\\": [
                "tests/unit/OpenConext/",
                "tests/integration/OpenConext/",
                "tests/functional/OpenConext/"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        },
        "symfony-var-dir": "var",
        "symfony-bin-dir": "bin",
        "symfony-web-dir": "public",
        "incenteev-parameters": {
            "file": "config/packages/parameters.yml",
            "dist-file": "config/packages/parameters.yml.dist"
        }
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "!/.env",
            "*/Tests/*",
            "!/application",
            "!/bin",
            "!/component_info",
            "!/config",
            "!/languages",
            "!/library",
            "!/migrations",
            "!/public",
            "!/src",
            "!/theme",
            "/theme/node_modules",
            "!/vendor",
            "!/web",
            "bin/dev"
        ]
    }
}
